<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.oibss.chronoomega.hibernate.entities.AccountEntity" table="account" schema="dbo" catalog="chrono">
        <id name="id">
            <column name="id" sql-type="uniqueidentifier"/>
        </id>
        <property name="mail">
            <column name="mail" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>